<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.DetailActivity">

    <ImageView
        android:id="@+id/tv_img_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/category_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Category :"
        android:layout_marginEnd="4dp"
        android:textColor="@color/dark_blue_500"
        app:layout_constraintEnd_toStartOf="@+id/tv_category"
        app:layout_constraintTop_toTopOf="@+id/tv_category" />

    <TextView
        android:id="@+id/tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:maxWidth="80dp"
        android:textAlignment="textEnd"
        android:textColor="@color/dark_blue_500"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/tv_img_detail"
        app:layout_constraintTop_toBottomOf="@+id/tv_img_detail"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/tv_stock_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock :"
        android:layout_marginEnd="4dp"
        android:textColor="@color/dark_blue_500"
        app:layout_constraintEnd_toStartOf="@+id/tv_stock"
        app:layout_constraintTop_toTopOf="@+id/tv_stock" />

    <TextView
        android:id="@+id/tv_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textColor="@color/dark_blue_500"
        android:textAlignment="textEnd"
        app:layout_constraintEnd_toEndOf="@+id/tv_category"
        app:layout_constraintTop_toBottomOf="@+id/tv_category"
        tools:text="32" />

    <TextView
        android:id="@+id/tv_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:maxWidth="180dp"
        android:layout_marginTop="32dp"
        android:textColor="@color/dark_blue_500"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@tools:sample/lorem" />

    <TextView
        android:id="@+id/tv_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="4dp"
        tools:text="@string/dummy_price"
        android:textColor="@color/dark_blue_500"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_product_name" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:justificationMode="inter_word"
        android:maxWidth="345dp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@+id/tv_product_price"
        app:layout_constraintTop_toBottomOf="@+id/tv_stock"
        tools:text="@tools:sample/lorem" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginEnd="32dp"
        android:text="Delete"
        android:backgroundTint="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>